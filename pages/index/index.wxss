/**index.wxss**/
page { 
  background-color: #EAEBEB; 
}
/* 授权 */
.accredit{
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #F7F6F2;
  color: #999;
  font-size: 14px;
}
.accredit>view{
  margin-left: 10rpx;
}
/* 搜索 */
.header{
  padding: 20rpx 10rpx;
  background-color: #FD6700;
}
.search{
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  color: #666;
  padding: 10rpx 0;
  border-radius: 50rpx;
}
.search view{
  padding: 0 10rpx;
}
/* 轮播图 */
swiper{
  height: 350rpx;
}
swiper image{
  width: 100%;
  height: 350rpx;
}
/* 十宫格 */
.ten-tab{
  padding-top: 20rpx;
  background-color: #fff;
}
.ten-tab::after{
  content: "";
  display: block;
  clear: both;
}
.ten-tab>view{
  float: left;
  width: 20%;
  margin-bottom: 20rpx;
  text-align: center;
}
.ten-tab image{
  width: 75rpx;
  height: 75rpx;
}
/* 商品列表 */
.contentTitle{
  font-size: 20px;
  font-weight: bold;
  padding: 10rpx 30rpx;
  background-color: #fff;
}
.content::after{
  content: "";
  display: block;
  clear: both;
}
.contentShop{
  box-sizing: border-box;
  padding-right: 5rpx;
  width: 50%;
  float: left;
  background-color: #fff;
}
.contentShop image{
  width: 100%;
  max-height: 250rpx;
}
.contentShop .shopText{
  padding: 30rpx;
}
.shopText view:nth-child(1){
  font-size: 18px;
}
.shopText view:nth-child(2){
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  padding: 10rpx 0;
  font-size: 14px;
  color: #ddd;
}
.shopText view:nth-child(3){
  color: red;
}
.shopText .price{
  position: relative;
  color: #ddd;
  font-size: 14px;
  margin-left: 10rpx;
}
.shopText .price::after{
  content: "";
  display: inline-block;
  width: 100%;
  height: 1px;
  position: absolute;
  top: 50%;
  left: 0;
  background-color: #ddd;
}